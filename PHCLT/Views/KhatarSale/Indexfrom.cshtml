            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <!-- /.card-header -->
    <form id="customerForm">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">નામ</label>
                        <input type="text" class="form-control" id="mname" placeholder="તમારું નામ દાખલ કરો">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">મોબાઈલ નંબર</label>
                        <input type="text" class="form-control" id="mmobileno" placeholder="તમારું મોબાઈલ નંબર દાખલ કરો">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">ગામ નું નામ</label>
                        <input type="text" class="form-control" id="mvillagename" placeholder="તમારું ગામ નું નામ દાખલ કરો">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">શું તમે સભાસદ છો?</label>
                        <div>
                            <input type="checkbox" id="yesCheckbox" name="membership" value="Yes">
                            <label for="yesCheckbox">હા (Yes)</label>
                            <input type="checkbox" id="noCheckbox" name="membership" value="No" style="margin-left: 10px;">
                            <label for="noCheckbox">ના (No)</label>
                        </div>
                    </div>
                    <div class="form-group" id="paymentOptions" style="display: none;">
                        <label for="paymentType">ચુકવણી નો પ્રકાર (Payment Type):</label>
                        <select class="form-control" id="paymentType">
                            <option value="Cash">Cash</option>
                            <option value="Credit">Credit</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="profilePhoto">Profile Photo</label>
                        <input type="file" accept="*" name="profilePhoto" class="form-control-file" id="profilePhoto">
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="button" id="btnsave" class="btn btn-primary">Save</button>
                <button type="button" id="btnviewlist" class="btn btn-primary">View List</button>
